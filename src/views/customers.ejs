<% include ./partials/_header %>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data) {%>
            <% for (let i = 0, len = data.length; i < len ; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].phone %></td>
                <td>
                  <a href="/edit/<%=data[i].id%>" class="btn btn-info">Update</a>
                  <a href="/delete/<%=data[i].id%>" class="btn btn-danger">Delete</a></td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="name" placeholder="Insert Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="address" placeholder="Insert Address" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="phone" placeholder="Insert Phone" class="form-control">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Save Customer</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<% include ./partials/_footer %>
